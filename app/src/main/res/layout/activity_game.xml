<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vishwakarma.a21sticks.GameActivity"
    android:background="@mipmap/backgroundimg">

    <TextView
        android:text="AI Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="40dp"
        android:id="@+id/textView7"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Total 21 Sticks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalsticks"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"/>

    <TextView
        android:text="Remainig Sticks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/remainingstics"
        android:layout_alignBottom="@+id/remainingstics"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="62dp"
        android:id="@+id/remainingstics"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/totalsticks"
        android:layout_toEndOf="@+id/totalsticks" />

    <TextView
        android:text="User Select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Aiselect"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#111111"
        android:layout_below="@+id/Aiselect"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:background="#f1782d"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:layout_alignEnd="@+id/Aiselect"
        android:layout_marginRight="8dp"/>

    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AiselectValues"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/remainingstics" />

    <TextView
        android:text="00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Aiselect"
        android:layout_alignStart="@+id/AiselectValues"
        android:id="@+id/Uservalues"
        android:textColor="#ffffff"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button3"
        android:textColor="#111111"
        android:layout_alignEnd="@+id/button1"
        android:background="#f1782d"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textColor="#111111"
        android:background="#f1782d"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignTop="@+id/button1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="18dp"/>

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/button4"
        android:textColor="#111111"
        android:textStyle="bold"
        android:background="#f1782d"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textSize="25dp"
        android:layout_alignStart="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="User Turn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/turn"
        android:textColor="#f1782d"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:textStyle="bold"
        android:textSize="25dp"/>

</RelativeLayout>
